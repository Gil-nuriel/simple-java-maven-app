pipeline {
    
    agent none
    
    options {skipDefaultCheckout()}
    
    environment {
        registry = "gil11/simple-java-maven-app"
        registryCredential = 'b976ec1c-27a2-4b69-8e9c-60f77f11eb6d'
        dockerImage = ''
    }

    stages {
        stage ('update the project'){
            parallel{
                stage('pull to master'){
                    agent {
                        label 'master'
                    }
                    steps{
                        sh 'git pull https://github.com/Gil-nuriel/simple-java-maven-app.git master'
                    }
                }
                stage('pull to slave'){
                    agent {
                        label 'slave_2'
                    }
                    steps{
                        sh 'git pull https://github.com/Gil-nuriel/simple-java-maven-app.git master'
                    }
                }
            }
        }

        stage('Build'){
            agent{label 'master'}
            steps{
                script{
                     dockerImage = docker.build registry + ':latest'
                }
            }
        }

        stage('Run Tests'){
            parallel{
                stage('test on jdk-8') {
                    agent {
                        docker {
                            image 'maven:3.6.3-jdk-8'
                            args '-v /root/.m2:/root/.m2'
                        }
                    }
                    steps {
                        sh 'mvn -version'
                        sh 'mvn -B -DskipTests clean package'
                        sh 'mvn test'
                    }
                    post {
                        always {
                            junit 'target/surefire-reports/*.xml'
                        }
                    }
                }
                stage('test on jdk-11') {
                    agent {
                        docker {
                            image 'maven:3.6.3-jdk-11'
                            label 'slave_2'
                            args '-v /root/.m2:/root/.m2'
                        }
                    }                    
                    steps {
                        sh 'mvn -version'
                        sh 'mvn -B -DskipTests clean package'
                        sh 'mvn test'
                    }
                    post {
                        always {
                            junit 'target/surefire-reports/*.xml'
                        }
                    }
                }
            }
        }
        stage('Deliver') {
            parallel{
                stage('deliver on 8'){
                    agent {
                        docker {
                            image 'maven:3.6.3-jdk-8'
                            args '-v /root/.m2:/root/.m2'
                        }   
                    }
                    steps{ sh './jenkins/scripts/deliver.sh'}
                }
                stage('deliver on 11'){
                    agent {
                        docker {
                            image 'maven:3.6.3-jdk-11'
                            label 'slave_2' 
                            args '-v /root/.m2:/root/.m2'
                        }     
                    }  
                    steps{ sh './jenkins/scripts/deliver.sh'}
                }
            }
        }
        //first argument is empty because default is dockerhub!
        stage('Deploy'){
            agent{label 'master'}
            steps{
                script{
                     docker.withRegistery('',registryCredential){
                         dockerImage.push()
                     }
                }
            }
        }
    }
}
