pipeline {
    agent {
        docker {
            image 'maven:3-alpine'
        }
    }
    stages {

        stage('check version'){
            sh "echo mvn -version"
            sh "echo java -version"
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Deliver') {
            steps {
                sh './jenkins/scripts/deliver.sh'
            }
        }
    }
}
